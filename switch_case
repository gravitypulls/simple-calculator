#include <stdio.h>

int main()
{
    int num1, num2, result, menu;
    float divide;

    printf("Menu :\n");
    printf("1. Penjumlahan\n");
    printf("2. Pengurangan\n");
    printf("3. Perkalian\n");
    printf("4. Pembagian\n\n");

    printf("Pilih Menu : ");
    scanf("%d",&menu);

    switch (menu){
      case 1:
        printf("Kamu memilih Penjumlahan\n");
        printf("Bilangan pertama : ");
        scanf("%d", &num1);
        printf("Bilangan kedua   : ");
        scanf("%d", &num2);
        result = num1 + num2;
        printf("Hasil:   %d\n", result);
        break;
        
    case 2:
        printf("\nKamu memilih Pengurangan\n");
        printf("Bilangan pertama : ");
        scanf("%d", &num1);
        printf("Bilangan kedua   : ");
        scanf("%d", &num2);
        result = num1 - num2;
        printf("Hasil: %d\n", result);
        break;
        
    case 3:
        printf("\nKamu memilih Perkalian\n");
        printf("Bilangan pertama : ");
        scanf("%d", &num1);
        printf("Bilangan kedua   : ");
        scanf("%d", &num2);
        result = num1 * num2;
        printf("Hasil:  %d\n", result);
        break;
        
    case 4:
        printf("\nKamu memilih Pembagian\n");
        printf("Bilangan pertama : ");
        scanf("%d", &num1);
        printf("Bilangan kedua   : ");
        scanf("%d", &num2);
        divide = num1 / num2;
        printf("Hasil:  %.2f\n", divide);
        break;
      default:
        printf("Yaah tidak ada pilihan.");
        break;
    }
    return 0;
}
